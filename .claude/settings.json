{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "EDITOR": "nvim"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(/bin/ls:*)",
      "Bash(ast-grep:*)",
      "Bash(awk:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(chmod:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(echo:*)",
      "Bash(eza:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mise:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(node:*)",
      "Bash(pnpm:*)",
      "Bash(prettier:*)",
      "Bash(pwd:*)",
      "Bash(python3:*)",
      "Bash(python:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(sqlfluff:*)",
      "Bash(tar:*)",
      "Bash(test:*)",
      "Bash(touch:*)",
      "Bash(wget:*)",
      "WebFetch(domain:anthropic.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:githubusercontent.com)",
      "WebSearch",
      "mcp__browser__*",
      "mcp__chrome-dev__*",
      "mcp__context7__*",
      "mcp__linear__*",
      "mcp__notion__*",
      "mcp__probe__*"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "file=$(jq -r '.tool_input.file_path' /dev/stdin); prettier --write --ignore-unknown \"$(realpath \"$file\")\""
          },
          {
            "type": "command",
            "command": "file=$(jq -r '.tool_input.file_path' /dev/stdin); if [[ \"$file\" == *.sql ]]; then sqlfluff fix \"$(realpath \"$file\")\"; fi"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "ccstatusline",
    "padding": 0
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754086408110
  }
}
