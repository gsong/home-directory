{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "EDITOR": "nvim"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(/bin/ls:*)",
      "Bash(ast-grep:*)",
      "Bash(cat:*)",
      "Bash(eza:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mise:*)",
      "Bash(npx prettier:*)",
      "Bash(pnpm:*)",
      "Bash(prettier:*)",
      "Bash(sqlfluff:*)",
      "WebFetch(domain:anthropic.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:githubusercontent.com)",
      "WebSearch",
      "mcp__context7__get-library-docs",
      "mcp__context7__resolve-library-id",
      "mcp__chrome-dev__list_console_messages",
      "mcp__chrome-dev__emulate_cpu",
      "mcp__chrome-dev__emulate_network",
      "mcp__chrome-dev__click",
      "mcp__chrome-dev__drag",
      "mcp__chrome-dev__fill",
      "mcp__chrome-dev__fill_form",
      "mcp__chrome-dev__hover",
      "mcp__chrome-dev__upload_file",
      "mcp__chrome-dev__get_network_request",
      "mcp__chrome-dev__list_network_requests",
      "mcp__chrome-dev__close_page",
      "mcp__chrome-dev__handle_dialog",
      "mcp__chrome-dev__list_pages",
      "mcp__chrome-dev__navigate_page",
      "mcp__chrome-dev__navigate_page_history",
      "mcp__chrome-dev__new_page",
      "mcp__chrome-dev__resize_page",
      "mcp__chrome-dev__select_page",
      "mcp__chrome-dev__performance_analyze_insight",
      "mcp__chrome-dev__performance_start_trace",
      "mcp__chrome-dev__performance_stop_trace",
      "mcp__chrome-dev__take_screenshot",
      "mcp__chrome-dev__evaluate_script",
      "mcp__chrome-dev__take_snapshot",
      "mcp__chrome-dev__wait_for",
      "mcp__probe__extract_code",
      "mcp__probe__search_code",
      "mcp__browser__browser_navigate",
      "mcp__browser__browser_go_back",
      "mcp__browser__browser_go_forward",
      "mcp__browser__browser_snapshot",
      "mcp__browser__browser_click",
      "mcp__browser__browser_hover",
      "mcp__browser__browser_type",
      "mcp__browser__browser_select_option",
      "mcp__browser__browser_press_key",
      "mcp__browser__browser_wait",
      "mcp__browser__browser_get_console_logs",
      "mcp__browser__browser_screenshot"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "file=$(jq -r '.tool_input.file_path' /dev/stdin); prettier --write --ignore-unknown \"$(realpath \"$file\")\""
          },
          {
            "type": "command",
            "command": "file=$(jq -r '.tool_input.file_path' /dev/stdin); if [[ \"$file\" == *.sql ]]; then sqlfluff fix \"$(realpath \"$file\")\"; fi"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "ccstatusline",
    "padding": 0
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754086408110
  }
}
